<Page
    x:Class="SMART.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMART"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	RequestedTheme="Light"
    mc:Ignorable="d">
	<Page.TopAppBar>
		<AppBar x:Name="appBar" Background="#ffffff">
			<StackPanel Orientation="Horizontal">
				<AppBarButton x:ConnectionId='1' Foreground="Black" Icon="Home" Label="Home" x:Name="homeButton"                           />
                <AppBarButton x:ConnectionId='2' Foreground="Black" Icon="Mail" Label="Mail" x:Name="mailButton"                           />
                <AppBarButton x:ConnectionId='3' Foreground="Black" Icon="Folder" Label="Drive" x:Name="driveButton"                            />
                <AppBarButton x:ConnectionId='4' Foreground="Black" Icon="PreviewLink" Label="Sites" x:Name="sitesButton"                            />
                <AppBarButton x:ConnectionId='5' Foreground="Black" Icon="Calendar" Label="Calendar" x:Name="calendarButton"                               />
            </StackPanel>
		</AppBar>
	</Page.TopAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<WebView x:Name="SMARTWeb" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></WebView>
    </Grid>
</Page>

